pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'your-credential-id',
                    url: 'https://github.com/mohith200-ctrl/Devops_lab.git'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                    mkdir -p deployed_html
                    cp *.html deployed_html/
                '''
            }
        }
    }

    post {
        success {
            publishHTML(target: [
                allowMissing: false,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'deployed_html',
                reportFiles: 'form.html',
                reportName: 'My Webpage'
            ])
        }
    }
}
